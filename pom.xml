<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.example</groupId>
    <artifactId>product-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging> <!-- ⚠️ Projet parent -->

    <modules>
        <module>product-service</module>
        <module>product-web</module>
    </modules>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
    </properties>

    <!-- 🔹 Profils Maven -->
    <profiles>
        <!-- Profil Développement -->
        <profile>
            <id>dev</id>
            <properties>
                <env>Développement</env>
                <config.file>application-dev.properties</config.file>
            </properties>
        </profile>

        <!-- Profil Test -->
        <profile>
            <id>test</id>
            <properties>
                <env>Test</env>
                <config.file>application-test.properties</config.file>
            </properties>
        </profile>

        <!-- Profil Production -->
        <profile>
            <id>prod</id>
            <properties>
                <env>Production</env>
                <config.file>application-prod.properties</config.file>
            </properties>
        </profile>
    </profiles>

    <!-- 🔧 Plugin pour afficher le profil actif -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <echo message="===================================" />
                                <echo message="🔧 Environnement actif : ${env}" />
                                <echo message="📁 Fichier utilisé : ${config.file}" />
                                <echo message="===================================" />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>



    <distributionManagement>
        <!-- Releases fictives -->
        <repository>
            <id>local-releases</id>
            <name>Local Releases</name>
            <url>file:///C:/maven-repo/releases</url>
        </repository>

        <!-- Snapshots fictifs -->
        <snapshotRepository>
            <id>local-snapshots</id>
            <name>Local Snapshots</name>
            <url>file:///C:/maven-repo/snapshots</url>
        </snapshotRepository>
    </distributionManagement>


</project>
